{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "checkJs": true,
    "paths": {
      "zakhaarif-dev-tools": ["./src/zakhaarif-dev-tools/src/index"],
      "zakhaarif-dev-tools/*": ["./src/zakhaarif-dev-tools/src/*"]
    }
  },
  "include": [
    "src", 
    "config.mjs", 
    "build.mjs", 
    "devServer.mjs",
    "buildDevTools.mjs",
  ],
  "exclude": [
    "src/zakhaarif-dev-tools/build/",
    "src/gameCore/engine_wasm_core/pkg/engine_wasm_core.js",
    "src/gameCore/engine_wasm_core/pkg-node/engine_wasm_core.js",
    "public/"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
